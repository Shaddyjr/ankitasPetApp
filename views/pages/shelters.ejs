<!DOCTYPE html>
<html lang="en">

<head>
    <title>Shelters</title>
    <%include ../partials/head%>
</head>

<body>
    <%include ../partials/nav%>


    <div class="container flex-center mt-4">
        <form class="text-center border border-light p-5" action="/shelters/zip" method="POST">
            <p class="h2 mb-4">Find Shelters by Zip Code</p>
            <% if(locals.errors){ %>
                <% for(const error of errors){ %>
                    <p class="alert alert-danger"><%= error %></p>
                <% }%>
              <% }%>
            <!-- Large input -->
            <div class="md-form form-lg text-center">
                <input type="zip" name="zip" class="form-control form-control-lg" placeholder="Zip Code">
                <button class="btn btn-info btn-block my-4" type="submit">Find Shelters</button>
            </div>
    </div>

    </form>

    <%if(locals.shelters){%>
        <div class="container flex-center">
        <table class="shelter-table table table-hover w-75 text-center">
                <thead>
                  <tr class="black white-text">
                    <th scope="col">Shelter Name</th>
                    <th scope="col">Location</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Adoption Form</th>
                  </tr>
                </thead>
                <tbody>
                    <%for(const shelter of shelters){%>
                  <tr class="hoverable border border-secondary rounded shelter-row">
                    <th scope="row"><a href="/shelters/<%=shelter.api_id%>"><%=shelter.name%></a></th>
                    <td><%=shelter.location%></td>
                    <td><a href="mailto:<%=shelter.contact%>"><%=shelter.contact%></a></td>
                    <td>
                        <% if (shelter.formUrl){%>
                        <a href="<%=shelter.formUrl%>"><i class="fa fa-lg fa-link" aria-hidden="true"></i></a>                            
                        <%}%>
                    </td>
                  </tr>
                  <%}%>
                </tbody>
              </table>
            </div>
    <%}%>

    <%include ../partials/footer%>
</body>

</html>